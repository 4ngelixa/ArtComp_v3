@{
    ViewData["Title"] = "Judge Main Page";
}

<style>
    .btn {
        border: 2px solid #f25939;
        background-color: white;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        cursor: pointer;
        color: #f25939;
    }

        .btn:hover {
            background: #f25939;
            color: white;
        }
</style>

<section>
    @if (Context.Session.GetString("Name") != null)
    {
        <div class="pt-5 align-content-center">
            <div class="title h1 text-center"><marquee direction="left"><h1><span class="wave">👋 Hi @Context.Session.GetString("Name") 👋</span></h1></marquee></div>
            <h3>Welcome to ArtComp, the premier art judging platform!</h3>
            <h4>We are thrilled to have you as one of our esteemed judges. <br/>
            Your expertise and passion for art are essential to the success of this platform and the artists who use it.</h4> <br />
            <p>
                With ArtComp, you will have the opportunity to review and evaluate some of the most creative and talented artists from around the world. Our user-friendly platform makes it easy for you to view and score submissions, as well as provide meaningful feedback to the artists.<br /><br />
                We are committed to providing a secure and trustworthy platform that respects the privacy of both the judges and the artists. Our aim is to create a fair and unbiased judging process that rewards the best and brightest in the world of art.<br /><br />
                Thank you for joining ArtComp, and we look forward to working with you!
            </p>
        </div>
        <br />
        <a asp-action="Index" asp-controller="JoinView" class="btn">Get Started</a>
    }
    else
    {
<div class="pt-5 align-content-center">
    <div class="title h1 text-center"><marquee direction="left"><h1>Hi <span class="wave">👋</span></h1></marquee></div>
    <h3>Welcome to ArtComp, the premier art judging platform!</h3>
    <h4>We are thrilled to have you as one of our esteemed judges. <br/>
        Your expertise and passion for art are essential to the success of this platform and the artists who use it.</h4> <br />
    <p>
        With ArtComp, you will have the opportunity to review and evaluate some of the most creative and talented artists from around the world. Our user-friendly platform makes it easy for you to view and score submissions, as well as provide meaningful feedback to the artists.<br /><br />
        We are committed to providing a secure and trustworthy platform that respects the privacy of both the judges and the artists. Our aim is to create a fair and unbiased judging process that rewards the best and brightest in the world of art.<br /><br />
        Thank you for joining ArtComp, and we look forward to working with you!
    </p>
    </div>
        <br />
        <a asp-action="Index" asp-controller="JoinView" class="btn">Get Started</a>
    }
</section>

