@model IEnumerable<Web_Asg.Models.Competition>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Competitions</h1>

@if (Model.ToList().Count > 0)
{
    <a class="btn btn-primary mb-5" asp-action="Create" asp-controller="CompCreate">Create Comp</a>
<div class="table-responsive">
    <table id="viewStaff" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Result Release Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comp in Model)
            {
                <tr>
                    <td>@comp.CompetitionName</td>
                    <td>@comp.StartDate</td>
                    <td>@comp.EndDate</td>
                    <td>@comp.ResultReleasedDate</td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="CompCreate"
                           asp-route-id="@comp.CompetitionID">Delete Comp</a> 
                        <a class="btn btn-info" asp-action="Edit" asp-controller="CompCreate"
                           asp-route-id="@comp.CompetitionID">Edit Comp</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
else
{
<span style="color:red">No record found!</span>
}

