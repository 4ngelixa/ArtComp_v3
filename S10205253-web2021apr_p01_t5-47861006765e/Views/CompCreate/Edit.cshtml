@model Web_Asg.Models.Competition

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
    <h1>Edit Competition Details</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="CompetitionID" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="AreaInterestID" />
                </div>
                <div class="form-group">
                    <label asp-for="CompetitionName" class="control-label"></label>
                    <input asp-for="CompetitionName" class="form-control" />
                    <span asp-validation-for="CompetitionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResultReleasedDate" class="control-label"></label>
                    <input asp-for="ResultReleasedDate" class="form-control" />
                    <span asp-validation-for="ResultReleasedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input id="Save" type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn  btn-primary" asp-action="Index">Back to List</a>
    </div>
</body>
</html>
<script>
    $(document).ready(function () {
        if (@ViewData["competitorCount"] > 0) {
            alert("there are competitors in this competition")
            $("#Save").prop("disabled", true);
        }
    });
</script>


