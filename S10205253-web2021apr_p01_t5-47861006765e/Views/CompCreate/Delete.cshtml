@model Web_Asg.Models.Competition

@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
    <h1 class="mb-2">Delete Competitions</h1>

    <h3 class="mb-4">Are you sure you want to delete this?</h3>
    <div>
        <form asp-action="Delete">
            <fieldset class="FormContent">
                <div class="form-group row">
                    <div class="form-group">
                        <input type="hidden" asp-for="CompetitionID" />
                        <input type="hidden" asp-for="AreaInterestID" />
                        <label asp-for="CompetitionName" class="control-label"></label>
                        <input asp-for="CompetitionName" class="form-control" readonly />
                        <input type="hidden" asp-for="StartDate" />
                        <input type="hidden" asp-for="EndDate" />
                        <input type="hidden" asp-for="ResultReleasedDate" />
                    </div>
                </div>
            </fieldset>
            <input id="Delete" type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </form>
    </div>
</body>
</html>
<script>
    $(document).ready(function () {
        if (@ViewData["competitorCount"] > 0) {
        alert("there are competitors in this competition")
            $("#Delete").prop("disabled", true);
        }
    }); 
</script>

