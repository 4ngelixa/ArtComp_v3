@model IEnumerable<Web_Asg.Models.AreaInterest>

@{
    ViewData["Title"] = "View Categories";
}
@{
    var data = ViewBag;
}

<style>
    .btn {
        border: 2px solid white;
        background-color: #f25939;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        cursor: pointer;
        color: white;
    }

        .btn:hover {
            background: white;
            color: #f25939;
        }
</style>

<div class="pt-5 align-content-center">
    <h1>View Categories</h1><br />
    <a class="btn" asp-action="Create">Create New Category</a>
</div>
<br/><br />

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered table-hover">
            <thead style="color: #949494">
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td style="width:min-content">
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="AreaInterest"
                               asp-route-id="@item.AreaInterestID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
