@model Web_Asg.Models.SubmissionViewModel
@{
    ViewData["Title"] = "Submit Competition Work";
    var competition = (Competition)ViewData["Competition"];
}
<h4 class="PageTitle"> @competition.CompetitionName Submission </h4>
<hr />
<form asp-action="ViewSubmit" enctype="multipart/form-data">
    <fieldset class="FormContent">
        <!-- -->
        <!-- Storing SubmissionViewModel Details -->
        <!-- -->
        <div hidden>
            <label asp-for="CompetitionID"></label>
            <input asp-for="CompetitionID" readonly />
        </div>
        <div hidden>
            <label asp-for="CompetitorID"></label>
            <input asp-for="CompetitorID" readonly />
        </div>
        <!-- -->
        <!-- -->
        <!-- -->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Competition </label>
            <div class="col-sm-9 col-md-5">
                <input value="@competition.CompetitionName" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">End Date </label>
            <div class="col-sm-9 col-md-5">
                <input value="@competition.EndDate.ToShortDateString()" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Results Date </label>
            <div class="col-sm-9 col-md-5">
                <input value="@competition.ResultReleasedDate.ToShortDateString()" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FileSubmitted"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <embed src="~/submissions/@Model.FileSubmitted" width="200" height="250" style="overflow: scroll;" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="fileToUpload"
                   class="col-sm-3 col-form-label">
                Submission (pdf format)
            </label>
            <div class="col-sm-9">
                <input asp-for="fileToUpload" accept="pdf" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Upload"
                       class="btn btn-primary" />
                <span style="color:red;">@ViewData["Message"]</span>
            </div>
        </div>
        <div>
            <a asp-action="Index" asp-controller="JoinView">Back To Join/View Competitions</a>
        </div>
    </fieldset>
</form>