
@model Web_Asg.Models.ViewRankingViewModel

@{
    ViewData["Title"] = "View Ranking";
}

<style>
    .btn {
        border: 2px solid white;
        background-color: #f25939;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        cursor: pointer;
        color: white;
    }

        .btn:hover {
            background: white;
            color: #f25939;
        }
</style>


@if (ViewData["viewRanking"] != null)
{
    @if (ViewData["viewRanking"].ToString() == "1")
    {
        <h3>List of Scores for @Model.CompetitionName</h3>
        <br />
        <h4>Competitors with scores assigned</h4>
        @if (Model.competitorDoneList.Count() > 0)
        {
            <!-- Display a list of competitors -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead style="color: #949494">
                        <tr>
                            <th>Competitor ID</th>
                            <th>Competitor Name</th>
                            <th>Ranking</th>
                            <th>Total Score</th>
                        </tr>
                    </thead>
                    @if (Model.competitorDoneList != null)
                    {
                        <tbody>
                            @for (int i = 0; i < Model.competitorDoneList.Count(); i++)
                            {
                                <tr>
                                    <td>@Model.competitorDoneList[i].CompetitorID</td>
                                    <td>@Model.competitorDoneList[i].CompetitorName</td>
                                    <td>@Model.rankingList[i]</td>
                                    <td>@Model.competitionDoneScoreList[i]</td>
                                </tr>
                            }
                        </tbody>
                    }

                </table>
            </div>
        }
        else
        {
            <h5>-</h5>
        }
    }
}
else
{
    <h3>Please assign all scores to the submissions before viewing ranking</h3>
}

<a asp-action="ViewCompetition">Back to Competition List</a>