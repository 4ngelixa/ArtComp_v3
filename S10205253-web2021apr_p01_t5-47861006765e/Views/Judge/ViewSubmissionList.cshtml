@model Web_Asg.Models.ViewSubmissionListViewModel

@{
    ViewData["Title"] = "View Submission List";
}

<style>
    .btn {
        border: 2px solid white;
        background-color: #f25939;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        cursor: pointer;
        color: white;
    }

        .btn:hover {
            background: white;
            color: #f25939;
        }
</style>

<h4>List of Submissions for @Model.CompetitionName</h4>
<!-- Display a list of competitors -->
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead style="color: #949494">
            <tr>
                <th>Competitor ID</th>
                <th>Competitor Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        @if (Model.competitorList != null)
        {
            <tbody>
                @foreach (Competitor competitor in Model.competitorList)
                {
                    <tr>
                        <td>@competitor.CompetitorID</td>
                        <td>@competitor.CompetitorName</td>
                        <td>
                            <a asp-action="ViewSubmission" asp-controller="Judge" asp-route-competitorid="@competitor.CompetitorID" asp-route-competitionid="@Model.CompetitionID">View Submission</a>                          
                        </td>
                    </tr>
                }
            </tbody>
        }

        @if (Model.competitorList == null)
        {
            <tbody>
                <tr>
                    <td>No competitors have been assigned yet!</td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        }
    </table>
</div>

<a asp-action="ViewCompetition">Back to Competition List</a>