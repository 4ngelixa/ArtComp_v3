@{
    ViewData["Title"] = "Competitor Sign Up";
}

<h4 class="PageTitle" style="text-align:center">Creating Competitor Profile</h4>
<section class="w-75 d-flex align-content-center justify-content-center">
<form method="post" action="~/UserSignUp/SUFillCompetitor">
    <fieldset class="FormContent">

        <div class="form-group row">
            <label for="SUemail">Email address</label>
            <input name="SUemail" type="email" class="form-control" id="SUemail" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group row">
            <label for="SUsal">Full Name</label>
            <select name="SUsal" class="form-control" id="SUsal">
                <option>Mr</option>
                <option>Ms</option>
                <option>Mrs</option>
                <option>Mdm</option>
                <option>Dr</option>
            </select>
        </div>

        <div class="form-group row">
            <label class="sr-only" for="SUName">Name</label>
            <input name="SUName" type="text" class="form-control mb-2" id="SUName" placeholder="Jane Doe">
        </div>

        <div class="form-group row">
            <label for="pass">Password</label>
            <input name="pass" type="password" class="form-control" id="pass" placeholder="Password">
        </div>

        <div class="form-group row">
            <label for="cPass">Confirm Password</label>
            <input name="cPass" type="password" class="form-control" id="cPass" placeholder="Password">
        </div>

        <span style="color:red;">@TempData["Message"]</span>
        <p><input type="submit" value="Submit" /> </p>
        <a href="~/Home/Login">Back</a>
    </fieldset>
</form>
</section>